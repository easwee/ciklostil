---
export const prerender = false;
const err = new URL(Astro.request.url).searchParams.get("e");
---

<html>
  <body >
    <form method="post" action="/api/login" style="display:grid;gap:.75rem;min-width:280px">
      <h1>Sign in</h1>
      {err && (
        <p style="color:#c00;margin:0">Invalid credentials</p>
    )}
      <input name="username" placeholder="Username" required />
      <input name="password" type="text" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>
  </body>
</html>
